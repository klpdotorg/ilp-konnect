<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"

    android:paddingLeft="20dp"
    android:paddingRight="10dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="5dp"
        android:textSize="16sp"
        android:layout_marginBottom="5dp"
        android:id="@+id/textViewQuestion"
        >

    </TextView>
    <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:measureWithLargestChild="false"
        android:weightSum="3"
        android:paddingLeft="20dp"

        android:id="@+id/rgQuestion">
        <RadioButton android:id="@+id/radioYes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/answer_yes"
            android:layout_weight="1"/>
        <RadioButton android:id="@+id/radioNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/answer_no"
            android:layout_weight="1" />
        <RadioButton android:id="@+id/radioNoAnswer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/answer_unknown"
            android:layout_weight="1"/>
    </RadioGroup>

    <RadioGroup
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:measureWithLargestChild="false"
        android:weightSum="3"
        android:paddingLeft="20dp"

        android:id="@+id/rgQuestionnew"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edittext"
        android:textColor="#000000"

        android:minHeight="30dp"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/listcheckview"></LinearLayout>

</LinearLayout>